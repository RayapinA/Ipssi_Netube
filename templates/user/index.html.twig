{% extends 'base.html.twig' %}

{% block title %}Page User{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <h1>La liste des utilisateurs</h1>

        <ul>
            {% for user in users %}
                <li>
                    {{user.id}}  - {{user.firstname}}  -  {{user.lastname}}

                    <a class="backEndAction" href="{{ path("userby",{'firstname':user.firstname}) }}"> Show </a>

                    <a class="backEndAction" href="{{ path("editUserBy",{'firstname':user.firstname}) }}"> Edit </a>
                </li>
            {% endfor %}
        </ul>
        <hr />

    </div>
{% endblock %}
