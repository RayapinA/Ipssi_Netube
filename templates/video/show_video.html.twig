{% extends 'base.html.twig' %}

{% block title %} {{ video.title }}{% endblock %}

{% block body %}

    <div class="example-wrapper">

        <div class="videoShowDesign">

            <h3>{{ video.title }}</h3>
            <span class="infos_video">  By <a href="{{ path("userby",{'firstname':video.user.firstname}) }}"> {{ video.user.firstname }} {{ video.user.lastname }} </a> Created at  {{ video.createdAt | date("m/d/Y") }} </span>
            <br>
            <span> Category :<a href="{{ path("categoryById",{'id':video.category.id}) }}"> {{video.category.name}} </a> </span>

            <div class="videoIframe">
                <iframe width="560" height="315" src="{{ video.url }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>

            <div class="videoDescription">
                <p> {{ video.description }}</p>
            </div>

        </div>
        {# A faire  #}
            {# {{ video.nbViews }} #}
<br/>

</div>
{% endblock %}