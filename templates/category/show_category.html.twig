{% extends 'base.html.twig' %}

{% block title %}Hello VideoController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <div class="categoryShow">
            <h1> {{ category.name }} </h1>
            <br/>
            <div class="categoryDescription">
                <p>{{ category.description }}</p>
            </div>
             <span class="titre"> Video for this category </span>
            <br/>

            {% for video in videos %}
                <div class="videoCategoryShowDesign">

                    <span class="titre_video"> {{ video.title }} </span>
                    <br>

                    <div class="videoThumbnail">
                        <img src='http://img.youtube.com/vi/{{ video.idYoutube }}/hqdefault.jpg' height='200px' width='200px'>
                    </div>

                    <div class="videoLink">
                        <a href="{{ path("videoById",{'id':video.id}) }}"> Show </a>
                    </div>


                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}